<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Button name="ConsumeTracker_MinimapButton" hidden="false" enableMouse="true" parent="Minimap" toplevel="true" movable="true">
    
        <HighlightTexture alphaMode="ADD" file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight"/>
        <Size>
            <AbsDimension x="32" y="32"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="Minimap" relativePoint="TOPLEFT">
                <Offset>
                    <AbsDimension x="0" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="ConsumeTracker_MinimapIconTexture" file="Interface\AddOns\NightfallRaidTools\images\logo.tga">
                    <Size>
                        <AbsDimension x="21" y="21"/>
                    </Size>
                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <Texture file="Interface\Minimap\MiniMap-TrackingBorder">
                    <Size>
                        <AbsDimension x="56" y="56"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        
        <Scripts>
            <OnLoad>
                ConsumeTracker_OnLoad(this);
            </OnLoad>
            <OnDragStart>
                ConsumeTracker_OnDragStart(this);
            </OnDragStart>
            <OnDragStop>
                ConsumeTracker_OnDragStop(this);
            </OnDragStop>
            <OnMouseDown>
                 ConsumeTracker_HandleClick(self, arg1);
            </OnMouseDown>
            <OnEnter>
                GameTooltip:SetOwner(this, "ANCHOR_LEFT");
                GameTooltip:SetText("Nightfall Raid Tools");
                GameTooltip:AddLine("|cff00ff00Left Click|r to open Nightfall Raid Tools", 1, 1, 1);
                GameTooltip:AddLine("Shift + Click to drag", 0.5, 0.5, 0.5);
                GameTooltip:Show();
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide();
            </OnLeave>
        </Scripts>
    </Button>
</Ui>
